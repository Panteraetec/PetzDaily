<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aluno.petzdaily_cadastro">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PetzDailyLogin">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".PetzDailyEventoNav"
            android:label="@string/title_activity_petz_daily_evento_nav"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CadastroPetzDailyNav"
            android:label="@string/title_activity_cadastro_petz_daily_nav"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".carteira_vacina"
            android:label="@string/title_activity_carteira_vacina"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".PetzDailyPerfilPetNav"
            android:label="@string/title_activity_petz_daily_perfil_pet_nav"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PetzDailyPrinciPerfilNav"
            android:label="@string/title_activity_petz_daily_princi_perfil_nav"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PetzDailyCriacaoEventoNav"
            android:label="@string/title_activity_petz_daily_criacao_evento_nav"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PetzDailyVacinaNav"
            android:label="@string/title_activity_petz_daily_vacina_nav"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>